def main():
  nome = input("Digite seu nome: ")
  ano_nascimento = int(input("Digite seu ano de nascimento: "))
  ano_atual = 2024
  idade = ano_atual - ano_nascimento
  print(f"Olá {nome} Você tem {idade}")

  if idade < 18:
    print("Você é menor de idade")
  else:
    print("Voce é maior de idade")


 
  escolaridade = input("Digite sua escolaridade(ensino medio completo/ensino superior completo ): ")
  if escolaridade == "ensino medio completo":
    print("Você pode considerar os seguintes curso superiores")
    print("Engenharia de Software")
    print("Engenharia de hardware")
    print("Tecnico em informatica")

  elif escolaridade == "ensino superior completo":
     print("Você pode considerar os seguintes curso superiores")
     print("Engenharia de Software")
     print("Engenharia de hardware")
     print("Tecnico em informatica")
  else:
    print("Escolaridade não reconhecida. Por favor, informe uma das opções válidas.")
if __name__ == "__main__":
    main()
 
